<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hyperisland.hi_view_demo.MainActivity"
    android:background="@android:color/white"
    >

    <Button
        android:id="@+id/myButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_name"
        />

    <RelativeLayout
        android:id="@+id/awesomeViewLayout"
        android:layout_width="@dimen/awesome_view_size"
        android:layout_height="@dimen/awesome_view_size"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/myButton"
        >

        <View
            android:id="@+id/awesomeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            />

        <View
            android:id="@+id/topSquareView"
            android:layout_width="@dimen/awesome_view_size_1_div_3"
            android:layout_height="@dimen/awesome_view_size_1_div_3"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            />

        <View
            android:id="@+id/leftVerticalView"
            android:layout_width="@dimen/awesome_view_size_1_div_6"
            android:layout_height="@dimen/awesome_view_size_2_div_3"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />

        <View
            android:id="@+id/leftHorizontalView"
            android:layout_width="@dimen/awesome_view_size_1_div_3"
            android:layout_height="@dimen/awesome_view_size_1_div_6"
            android:background="@android:color/white"
            android:layout_alignTop="@+id/leftVerticalView"
            android:layout_alignParentLeft="true"
            />

        <View
            android:id="@+id/rightVerticalView"
            android:layout_width="@dimen/awesome_view_size_1_div_6"
            android:layout_height="@dimen/awesome_view_size_2_div_3"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/rightHorizontalView"
            android:layout_width="@dimen/awesome_view_size_1_div_3"
            android:layout_height="@dimen/awesome_view_size_1_div_6"
            android:background="@android:color/white"
            android:layout_alignTop="@+id/rightVerticalView"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/bottomHorizontalView"
            android:layout_width="@dimen/awesome_view_size_1_div_3"
            android:layout_height="@dimen/awesome_view_size_1_div_6"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/colorNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/awesomeViewLayout"
        android:gravity="center"
        android:text="Current color"/>

</RelativeLayout>
